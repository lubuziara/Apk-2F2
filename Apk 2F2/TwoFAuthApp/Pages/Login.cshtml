@page
@model TwoFAuthApp.Pages.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}
<h2>Logowanie</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    @if (Model.Require2FA)
    {
        <div class="mb-3">
            <label asp-for="Input.TwoFACode" class="form-label"></label>
            <input asp-for="Input.TwoFACode" class="form-control" />
            <span asp-validation-for="Input.TwoFACode" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary">Zaloguj</button>
    <div class="text-danger">@Model.ErrorMessage</div>
</form> 