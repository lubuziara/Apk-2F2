@page
@model TwoFAuthDemo.Pages.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Rejestracja</h2>
        
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Hasło</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Potwierdź hasło</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Zarejestruj</button>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
            }
        </form>
        
        <div class="text-center mt-3">
            <a asp-page="/Login">Masz już konto? Zaloguj się</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 